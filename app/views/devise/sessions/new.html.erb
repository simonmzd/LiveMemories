<div class="login-container">
  <header>
    <div class="logo">LOGO</div>
  </header>
  <main>
    <h1>CONNEXION</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="field">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Se connecter", class: "btn" %>
      </div>
    <% end %>

    <div class="links">
      <%= link_to "Mot de passe oubliÃ© ?", new_user_password_path, class: "link" %>
      <%= link_to "S'inscrire", new_user_registration_path, class: "link" %>
    </div>
  </main>
</div>
