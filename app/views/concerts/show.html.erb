<h1><%= @concert.title %></h1>

<p><%= @concert.description %></p>
<p><%= @concert.genre %></p>
<p><%= @concert.date %></p>
<p><%= @concert.localisation %></p>
<p><%= @concert.public %></p>
<p><%= @concert.venue %></p>

<%= cl_image_tag @concert.image.key, width: 400, height: 300, crop: :fill %>

<% if @contents.any? %>
  <% @contents.each do |content| %>
    <% if content.image.attached? %>
      <%= link_to concert_content_path(content.concert, content) do %>
        <%= cl_image_tag content.image.key, width: 400, height: 300, crop: :fill %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <p>Aucun contenu disponible pour ce concert.</p>
<% end %>

